{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputMode": "new-only"
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    }
  },
  "globalEnv": ["NODE_ENV", "NEXT_PUBLIC_*"],
  "experimental": {
    "turbo": {
      "pipeline": {
        "build": {
          "inputs": {
            "exclude": ["Desktop/**"]
        }
      }
    }
  }
  }
}